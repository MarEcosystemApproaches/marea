citHeader("To cite marea in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
authors <- eval(parse(text = meta$`Authors@R`))

# Create the bibentry
bib <- bibentry(
  bibtype = "Manual",
  title = "marea: Maritime Ecosystem Approach R Package",
  author = authors,
  year = year,
  note = note,
  url = "https://github.com/MarEcosystemApproaches/marea"
)

# Extract author names for text version
author_names <- sapply(authors, function(a) {
  paste(a$given, a$family)
})

if (length(author_names) <= 3) {
  author_text <- paste(author_names, collapse = ", ")
} else {
  author_text <- paste(paste(author_names[1:3], collapse = ", "), "et al.")
}

# Set the text version
attr(bib, "textVersion") <- paste(
  author_text, " (", year, "). ",
  "marea: Maritime Ecosystem Approach R Package. ",
  note, ". ",
  "https://github.com/MarEcosystemApproaches/marea",
  sep = ""
)

bib

citFooter("We appreciate citations as they help us secure funding for continued development.")